<div class="page-wrapper">

    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor"><%=title%></h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <a href="#" onclick="history.back()">
                    <li class="breadcrumb-item active">
                        Back <i class="fa fa-history"></i></li>
                </a>
            </ol>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-body">
                    <h4 class="card-title">New Proxy</h4>
                    <form class="form-horizontal m-t-40" method="post" action="/proxy/new/<%=plan%>">
                        <div class="form-group">
                            <label>Hostname <span class="help"> e.g. "mc.dec0de.xyz"</span></label>
                            <input type="text" name="hostname" class="form-control" value="mc.dec0de.xyz">
                        </div>
                        <div class="form-group">
                            <label>Backends (Comma Separated)<span class="help"> e.g. "1.1.1.1:25565,1.2.2.1:25565"</span></label>
                            <textarea type="text" name="targets" class="form-control"></textarea>
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">Create Proxy</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
